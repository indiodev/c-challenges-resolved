{
  "tasks": [
    {
      "type": "cppbuild",
      "label": "C/C++: gcc build active file",
      "command": "/usr/bin/gcc",
      "args": [
        "-fdiagnostics-color=always",
        "-g",
        "${file}",
        "${fileDirname}/include/*.c",
        "-lm",
        "-o",
        "${fileDirname}/output/${fileBasenameNoExtension}",
        "2>/dev/null"
      ],
      "options": {
        "cwd": "${fileDirname}/output"
      },
      "problemMatcher": ["$gcc"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "Task generated by Debugger."
    }
  ],
  "version": "2.0.0"
}
